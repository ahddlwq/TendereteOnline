<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
        xmlns:p="tapestry:parameter" t:type="Layout" t:pageTitle="title">

        <form t:type="Form" t:id="selectLanguageForm">
                <div class="field">
                <t:label for="language"/>
                <span class="entry">
                        <t:select t:id="language" model="languages" validate="required"/>
                </span>
            </div>
        
            <div class="button">
                        <button type="submit" class="btn btn-primary">
                        <i class="icon-search icon-font"></i> ${message:submit}
                        </button>
                </div>
    </form>     
</html> 