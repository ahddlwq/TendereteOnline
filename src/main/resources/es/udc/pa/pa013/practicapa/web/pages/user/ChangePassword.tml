<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
	xmlns:p="tapestry:parameter" t:type="Layout" t:pageTitle="title">
	      
	<form t:type="Form" t:id="changePasswordForm">
		<t:errors/>	   
	   <div class="field">        
	        <t:label for="oldPassword"/>
	        <span class="entry">
	            <input t:id="oldPassword" t:type="PasswordField"
				       t:validate="required" 
	                   size="16" maxlength="8"/>
	        </span>
	   </div>
	   
	   <div class="field">        
	        <t:label for="newPassword"/>
	        <span class="entry">
	            <input t:id="newPassword" t:type="PasswordField"
				       t:validate="required" 
	                   size="16" maxlength="8"/>
	        </span>
       </div>

	   <div class="field">        
	        <t:label for="retypeNewPassword"/>
	        <span class="entry">
	            <input t:id="retypeNewPassword" t:type="PasswordField"
				       t:validate="required" 
	                   size="16" maxlength="8"/>
	        </span>
	    </div>
	       
	    <div class="button">
	        <button type="submit" class="btn btn-primary">
  			<i class="icon-ok icon-white"></i> ${message:submit}
			</button>
	    </div>
	    
	</form>
</html>